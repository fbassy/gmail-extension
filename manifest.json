{
  "name": "Unleashed in Gmail",
  "description": "Show Unleashed information while using Gmail",
  "version": "0.1",
  "manifest_version": 2,
  "background" : {
    "scripts": ["background.js"]
  },
  "permissions": [
    "webRequest",
    "http://*/", "https://*/",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["jquery.min.js", "hmac-sha256.js", "enc-base64-min.js", "contentscript.js"],
      "css": ["font-awesome.min.css"],
      "run_at": "document_end",
      "all_frames" : false
    }
  ],
  "options_page": "options.html",
  "icons": {
    "128": "icon128.png"
  },
  "web_accessible_resources": ["fonts/*"]
}
